{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "all_in_one_toolkit",
    "version": "0.6.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dmitriydev.allinonetoolkit",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico",
        "icons/128x128.png"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "All In One Toolkit",
        "width": 800,
        "height": 600,
        "minHeight": 400,
        "minWidth": 400
      }
    ]
  }
}
